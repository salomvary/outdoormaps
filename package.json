{
  "name": "outdoormaps",
  "version": "0.0.1",
  "description": "Outdoor maps for mobile and desktop",
  "private": true,
  "license": "MIT",
  "dependencies": {
    "@mapbox/corslite": "0.0.7",
    "@mapbox/polyline": "^1.1.1",
    "add-to-homescreen": "^3.2.6",
    "browser-jsonp": "^1.0.1",
    "fastclick": "^1.0.6",
    "file-saver": "^1.3.8",
    "jxon": "^2.0.0-beta.5",
    "leaflet": "^1.7.1",
    "leaflet-fullscreen": "^1.0.2",
    "leaflet-plugins": "^3.3.2",
    "os-leaflet": "^1.0.0",
    "proj4leaflet": "^1.0.2"
  },
  "devDependencies": {
    "@types/chai": "^4.2.13",
    "@types/file-saver": "^2.0.1",
    "@types/leaflet": "^1.5.19",
    "@types/mocha": "^7.0.2",
    "@types/proj4leaflet": "^1.0.5",
    "@types/sinon": "^9.0.8",
    "@types/sinon-chai": "^3.2.5",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "chai": "^4.2.0",
    "esbuild": "^0.25.12",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^4.3.0",
    "jsdom": "^16.4.0",
    "jsdom-global": "^3.0.2",
    "lint-staged": "^10.5.1",
    "mocha": "^7.2.0",
    "prettier": "^3.6.2",
    "sinon": "^9.2.0",
    "sinon-chai": "^3.5.0"
  },
  "scripts": {
    "test": "mocha-webpack --require jsdom-global/register 'app/*-test.ts'",
    "start": "esbuild app/app.ts app/assets/app.css --bundle --outdir=dist --loader:.png=file --loader:.gif=file --loader:.svg=file --servedir=. --watch --sourcemap",
    "lint": "eslint --ext .js,.ts .",
    "prettier:write": "prettier --write .",
    "prettier:check": "prettier --check .",
    "build": "esbuild app/app.ts app/assets/app.css --bundle --outdir=dist --loader:.png=file --loader:.gif=file --loader:.svg=file --minify"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.{js,css,md,json,markdown,yml}": "prettier --write"
  }
}
