{
  "compilerOptions": {
    "lib": ["dom", "es2015", "es2015.promise"],
    "moduleResolution": "node",
    "baseUrl": "./",
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "checkJs": true,
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ]
  },
  "include": [
    "app/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
